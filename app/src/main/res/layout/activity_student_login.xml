<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentLoginActivity">

    <ImageView
        android:layout_marginTop="80dp"
        android:id="@+id/school_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/the_official_logo_for_our_application"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/student_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/school_logo"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/student_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:layout_below="@id/student_login_email"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:ems="10"
        />
    <Button
        android:id="@+id/loginAs_Student"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_login_password"
        android:layout_centerHorizontal="true"
        android:text="Log In"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_buttons"
        android:textColor="@color/white"

        />
</RelativeLayout>