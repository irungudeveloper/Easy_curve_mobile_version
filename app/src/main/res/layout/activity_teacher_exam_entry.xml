<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherExamEntry"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:background="@color/maincolor">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="-110dp"
        android:padding="2dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="55dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="9dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">
                <TextView
                    android:id="@+id/student_my_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:paddingTop="5dp"
                    android:text="Exam Entry"
                    android:textColor="@color/maincolor"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/exam_entry_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <TextView
            android:id="@+id/math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:text="Mathematics:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="20px"/>

        <EditText
            android:id="@+id/math_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/math"
            android:hint="Enter marks here"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/math"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            android:includeFontPadding="false"
            android:text="English:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/english_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/math_grade"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/english"
            android:hint="Enter marks here"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/science"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/english"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:includeFontPadding="false"
            android:text="Science:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/science_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/english_grade"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/science"
            android:hint="Enter marks here"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/kiswahili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/science"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="Kiswahili:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/kisw_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/science_grade"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="-1dp"
            android:layout_toRightOf="@id/kiswahili"
            android:hint="Enter marks here"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/cre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kiswahili"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:includeFontPadding="false"
            android:text="CRE:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cre_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/kisw_grade"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/cre"
            android:hint="Enter marks here"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/sstudies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cre"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:includeFontPadding="false"
            android:text="Social Studies:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sstudies_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cre_grade"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/sstudies"
            android:hint="Enter marks here"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/exam_entry_submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sstudies"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/custom_logout_button"
            android:text="SUBMIT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>